@model DALLayer.Appointment

@{
    ViewBag.Title = "BookAppoint";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">/>
<h2>Book Appointment</h2>

@using (Html.BeginForm("BookAppoint","Patients",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <div class="container">
        <div class="card appointment-form">
            <div class="card-body">
                <h4 class="card-title">Appointment</h4>
                <hr />
              @*ValidationSummery displays Validation Error Messages*@
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="font-weight-bold">Selected Doctor</label>
                    <div>
                        @*Session["DoctorName"] retrieves the value stored in the session variable named "DoctorName."*@
                        <p>@Session["DoctorName"]</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">Selected Specialization</label>
                    <div>
                        <p>@Session["SpecializationName"]</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">Describe your Problem</label>
                    <div>
                        @Html.TextAreaFor(model => model.Details, new { @class = "form-control", rows = "4", placeholder = "Enter details..." })
                        @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">Doctor Timing :</label>
                    <div>
                        <p>@Session["Timings"]</p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">Select Appointment Date</label>
                    <div>
                        @Html.EditorFor(model => model.StartDateTime, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.StartDateTime, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="form-group text-center">
                    <input type="submit" value="Book Appointment" class="btn btn-success" />
                    <a href="@Url.Action("Index", "Patients")" class="btn btn-secondary ml-2">Cancel</a>
                </div>
                </div>
            </div>
        </div>
    </div>
    }

