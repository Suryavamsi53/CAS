@model DALLayer.Appointment

@{
    ViewBag.Title = "BookAppointment";
    Layout = "~/Views/Shared/_FrontOfficeLayout.cshtml";
}

<style>
    .custom-background {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
    }

    .form-row {
        margin-bottom: 15px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
    }

    .btn-success {
        background-color: #28a745;
        color: #fff;
    }
</style>

<div class="container custom-background">
    <h2 class="text-center">Book Appointment</h2>

    @using (Html.BeginForm("BookAppointment", "FrontOfficeExecutives", FormMethod.Post))
    {
        <fieldset>
            <legend>Book Appointment For Patient :</legend>
            <div class="form-row justify-content-center">
                <div class="form-group w-50">
                    <label for="patientName">Patient Name</label>
                    @Html.DropDownListFor(app => app.PatientId, new SelectList(ViewBag.Patient, "PatientId", "Name"), new { @class = "form-control", required = "required" })
                </div>
                <div class="form-group w-50">
                    <label for="doctorName">Doctor Name</label>
                    @Html.DropDownListFor(app => app.DoctorId, new SelectList(ViewBag.Doctor, "DoctorId", "DoctorName"), new { @class = "form-control", required = "required" })
                </div>
                <div class="form-group w-50">
                    <label for="appointmentDate">Appointment Date</label>
                    @Html.TextBoxFor(app => app.StartDateTime, new { type = "date", @class = "form-control", placeholder = "Select Date", required = "required" })
                    @Html.ValidationMessageFor(app => app.StartDateTime, "", new { @class = "text-danger" })
                </div>
                <div class="form-group w-50">
                    <label for="details">Appointment Details</label>
                    @Html.TextAreaFor(app => app.Details, new { @class = "form-control", placeholder = "Enter Appointment Details", required = "required", maxlength = "200", rows = "1" })
                </div>
                <div class="form-group w-50">
                    <label for="isApproved">Approve</label>
                    @Html.DropDownListFor(app => app.IsApprove, new SelectList(new List<Object> {
                new { Id = true, Value="Yes" },
                new { Id = false, Value="No" } }, "Id", "Value"), new { @class = "form-control" })
                </div>
                <div class="form-group w-50">
                    <label for="status">Status</label>
                    @Html.DropDownListFor(app => app.Status, new SelectList(new List<Object> {
                new { Value="Queue" },
                new { Value="Approved" } }, "Value", "Value"), new { @class = "form-control" })
                </div>
                <div class="form-group w-50 text-left">
                    <button type="submit" class="btn btn-success">Submit</button>
                    <a href="@Url.Action("ViewAppointment", "FrontOfficeExecutives")" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            </div>
        </fieldset>
    }
</div>













































