@model IEnumerable<DALLayer.Doctor>

@{
    ViewBag.Title = "DoctorList";
    Layout = "~/Views/Shared/AdminsLayout/_AdminDoctorLayout.cshtml";
}

<h2>Doctor List</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th style="min-width: 120px;">@Html.DisplayNameFor(model => model.DoctorName)</th>
                <th style="min-width: 120px;">@Html.DisplayNameFor(model => model.Specialization.SpecializationName)</th>
                <th style="min-width: 90px;">@Html.DisplayNameFor(model => model.DOB)</th>
                <th style="min-width: 60px;">@Html.DisplayNameFor(model => model.Gender)</th>
                <th style="min-width: 90px;">@Html.DisplayNameFor(model => model.Phone)</th>
                <th style="min-width: 120px;">@Html.DisplayNameFor(model => model.Address)</th>
                <th style="min-width: 120px;">@Html.DisplayNameFor(model => model.Email)</th>
                <th style="min-width: 90px;">@Html.DisplayNameFor(model => model.Password)</th>
                <th style="min-width: 60px;">@Html.DisplayNameFor(model => model.IsAvailable)</th>
                <th style="min-width: 90px;">@Html.DisplayNameFor(model => model.Timings)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.DoctorName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Specialization.SpecializationName)</td>
                    <td>@Html.DisplayFor(modelItem => item.DOB)</td>
                    <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Password)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsAvailable)</td>
                    <td>@Html.DisplayFor(modelItem => item.Timings)</td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteDoctor", new { id = item.DoctorId }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
































