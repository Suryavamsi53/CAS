@model DALLayer.Pharmacist

@{
ViewBag.Title = "CAS";
    Layout = null;
}

<title>@ViewBag.Title</title>
<style>
    body {
        background-image: url('/Scripts/Backgroundlogin/3.jpg');
        background-size: cover;
        background-color: #F3EBF6;
        font-family: 'Ubuntu', sans-serif;
    }

    .main {
        background-color: inherit;
        width: 500px;
        margin: 7em auto;
        max-width: 80%;
        opacity: 0.8;
        height: 700px;
        border-radius: 1.5em;
        box-shadow: 0px 11px 35px 2px rgba(0, 0, 0, 0.14);
        padding: 20px;
        box-sizing: border-box;
    }

        .main h1 {
            margin-right: 30px;
        }

    .ph {
        padding-top: 40px;
        color: #8C55AA;
        text-align: center; /* Align text in the center */
        font-family: 'Ubuntu', sans-serif;
        font-weight: bold;
        font-size: 23px;
    }

    .un {
        width: 80%;
        height: 40px;
        color: black;
        font-weight: 400;
        font-size: 20px;
        letter-spacing: 1px;
        padding: 10px;
        margin: 0 auto;
        border: none;
        border-radius: 80px;
        box-sizing: border-box;
        margin-bottom: 27px;
        font-family: 'Ubuntu', sans-serif;
    }

    .pass {
        width: 80%;
        height: 40px;
        color: black;
        font-weight: 400;
        font-size: 20px;
        letter-spacing: 1px;
        padding: 10px;
        margin: 0 auto;
        border: none;
        border-radius: 80px;
        box-sizing: border-box;
        margin-bottom: 27px;
        font-family: 'Ubuntu', sans-serif;
    }

    .un {
        color: black;
        margin-top: 20px; /* Add margin to the top of the username input */
    }

    .pass {
        color: black;
        margin-bottom: 30px; /* Add margin to the bottom of the password input */
    }

    .submit {
        cursor: pointer;
        border-radius: 5em;
        color: #fff;
        background: linear-gradient(to right, #9C27B0, #E040FB);
        border: 0;
        padding: 10px 40px;
        font-family: 'Ubuntu', sans-serif;
        margin: 0 auto;
        font-size: 13px;
        box-shadow: 0 0 20px 1px rgba(0, 0, 0, 0.04);
        display: block; /* Set to block for full-width button */
    }

    .forgot {
        text-shadow: 0px 0px 3px rgba(117, 117, 117, 0.12);
        color: #E1BEE7;
        text-align: center;
        padding-top: 15px;
    }

    a {
        text-shadow: 0px 0px 3px rgba(117, 117, 117, 0.12);
        color: black;
        text-decoration: none;
    }

    .logo {
        text-align: center;
        padding-top: 30px;
        border-radius: 5px;
    }

    .outlined-textbox {
        border: 1px solid #ccc;
        padding: 5px;
        width: 100%;
        margin: 0 auto;
    }

    .reset {
        text-align: center;
        padding-top: 20px;
    }
</style>

<div class="main">
    <div class="logo">
        <img src="~/Scripts/icons/pharmacist.png" alt="Img not loaded">
    </div>
    <h1 class="ph"> Pharmacist Login</h1>

    @using (Html.BeginForm("PharmacistsLogin", "Home", FormMethod.Post))
    {
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="un">
        @Html.LabelFor(model => model.Email, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Email, new { @class = "un form-control outlined-textbox" })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>
    <br /><br /><br />
    <div class="pass">
        @Html.LabelFor(model => model.Password, new { @class = "control-label" })
        <div style="position: relative;">
            @Html.PasswordFor(model => model.Password, new { @class = "pass form-control outlined-textbox", id = "Password" })
            <i id="showPasswordIcon" class="show-password" style="position: absolute; right: 10px; top: 50%; cursor: pointer; transform: translateY(-50%);">👁️‍🗨️</i>
        </div>
        @Html.ValidationMessageFor(model => model.Password)
    </div>
    <br />
    <br />
    <br />
    <div class="form-group">
        <button type="submit" class="submit">Login</button>
    </div>
    <div class="forgot">
        @Html.ActionLink("Reset", "ResetPass", "Home", new { @class = "form-class" })
    </div>
    }
</div>
@Scripts.Render("~/bundles/ShowPass")