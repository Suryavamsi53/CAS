@model DALLayer.Doctor

@{
    ViewBag.Title = "CAS";
    Layout = null;
}
<title>@ViewBag.Title</title>
<style>
    body {
        background-image: url('/Scripts/Backgroundlogin/2.jpg');
        background-size: cover;
        background-color: #F3EBF6;
        font-family: 'Ubuntu', sans-serif;
    }

    .main {
        background-color: inherit;
        width: 500px;
        margin: 7em auto;
        max-width: 80%;
        opacity: 0.8;
        height: 700px;
        border-radius: 1.5em;
        box-shadow: 0px 11px 35px 2px rgba(0, 0, 0, 0.14);
        padding: 20px;
        box-sizing: border-box;
    }

    .Docter {
        padding-top: 40px;
        color: #8C55AA;
        text-align: center; /* Align text in the center */
        font-family: 'Ubuntu', sans-serif;
        font-weight: bold;
        font-size: 23px;
    }

    .un {
        width: 100%; /* Full width for textboxes */
        height: 40px;
        color: black;
        margin-top: 30px;
        font-weight: 400;
        font-size: 20px;
        letter-spacing: 1px;
        padding: 10px;
        margin-bottom: 20px; /* Adjusted margin for better spacing */
        border: none;
        border-radius: 80px;
        box-sizing: border-box;
        font-family: 'Ubuntu', sans-serif;
    }

    .pass {
        width: 100%; /* Full width for textboxes */
        height: 40px;
        color: black;
        margin-bottom: 60px;
        font-weight: 400;
        font-size: 20px;
        letter-spacing: 1px;
        padding: 10px;
        margin-bottom: 20px; /* Adjusted margin for better spacing */
        border: none;
        border-radius: 80px;
        box-sizing: border-box;
        font-family: 'Ubuntu', sans-serif;
    }

    .submit {
        cursor: pointer;
        border-radius: 5em;
        color: #fff;
        background: linear-gradient(to right, #9C27B0, #E040FB);
        border: 0;
        padding: 10px 40px;
        font-family: 'Ubuntu', sans-serif;
        margin: 0 auto; /* Center the button */
        font-size: 13px;
        box-shadow: 0 0 20px 1px rgba(0, 0, 0, 0.04);
        display: inline-block;
    }

    .forgot {
        text-shadow: 0px 0px 3px rgba(117, 117, 117, 0.12);
        color: #8C55AA;
        padding-top: 15px;
        text-align: center; /* Center the "Forgot Password" text */
    }

    a {
        text-shadow: 0px 0px 3px rgba(117, 117, 117, 0.12);
        color: black;
        text-decoration: none;
    }

    .logo {
        text-align: center; /* Center the logo */
        padding-top: 30px;
    }

    .outlined-textbox {
        border: 1px solid #ccc;
        padding: 5px;
        width: 100%;
        margin: 0 auto; /* Center the textboxes */
    }

    .reset {
        text-align: center; /* Center the "Reset Password" link */
        padding-top: 20px;
    }

    .form-group {
        text-align: center; /* Center the content within .form-group */
    }
</style>

<div class="main">
    <div class="logo">
        <img src="~/Scripts/icons/doctor.png">
    </div>
    <h2 class="Docter">Doctor Login</h2>

    @using (Html.BeginForm("DoctorLogin", "Home", FormMethod.Post))
    {
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="un">
        @Html.LabelFor(model => model.Email, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Email, new { @class = "un form-control outlined-textbox" })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>
    <br /><br /><br />
    <div class="pass">
        @Html.LabelFor(model => model.Password, new { @class = "control-label" })
        <div style="position: relative;">
            @Html.PasswordFor(model => model.Password, new { @class = "pass form-control outlined-textbox", id = "Password" })
            <i id="showPasswordIcon" class="show-password" style="position: absolute; right: 10px; top: 50%; cursor: pointer; transform: translateY(-50%);">👁️‍🗨️</i>
        </div>
        @Html.ValidationMessageFor(model => model.Password)
    </div>
    <br />
    <br />
    <br />
    <div class="form-group">
        <button type="submit" class="submit" style="color: black; font-size: 18px;">Login</button>
    </div>
    <div class="forgot">
        @Html.ActionLink("ResetPassword", "ResetPass", "Home", new { @class = "btn btn-primary" })
    </div>
    }
</div>
@Scripts.Render("~/bundles/ShowPass")