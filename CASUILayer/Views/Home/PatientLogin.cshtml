@model DALLayer.Patient

@{
    ViewBag.Title = "CAS";
    Layout = null;
}
<title>@ViewBag.Title</title>
<style>
    body {
        background-image: url('/Scripts/Backgroundlogin/5.jpg');
        background-size: cover;
        background-color: #F3EBF6;
        font-family: 'Ubuntu', sans-serif;
    }

    .main {
        background-color: inherit;
        width: 400px;
        margin-right: 150px;
        max-width: 80%;
        opacity: 0.8;
        height: 600px;
        margin: 7em auto;
        border-radius: 1.5em;
        box-shadow: 0px 11px 35px 2px rgba(0, 0, 0, 0.14);
        padding: 20px;
        box-sizing: border-box
        /* Add padding for better spacing    */
    }

    .Patient {
        color: black; /* #8C55AA;*/
        text-align: center;
        font-family: 'Ubuntu', sans-serif;
        font-weight: bold;
        font-size: 23px;
    }

    .un {
        width: 100%; /* Full width for textboxes */
        height: 40px;
        color: black;
        margin-top: 30px;
        font-weight: 400;
        font-size: 20px;
        letter-spacing: 1px;
        padding: 10px;
        margin-bottom: 20px; /* Adjusted margin for better spacing */
        border: none;
        border-radius: 80px;
        box-sizing: border-box;
        font-family: 'Ubuntu', sans-serif;
    }

    .pass {
        width: 100%; /* Full width for textboxes */
        height: 40px;
        color: black;
        margin-bottom: 60px;
        font-weight: 400;
        font-size: 20px;
        letter-spacing: 1px;
        padding: 10px;
        margin-bottom: 20px; /* Adjusted margin for better spacing */
        border: none;
        border-radius: 80px;
        box-sizing: border-box;
        font-family: 'Ubuntu', sans-serif;
    }

    .submit {
        cursor: pointer;
        border-radius: 5em;
        color: #fff;
        background: linear-gradient(to right, #9C27B0, #E040FB);
        border: 0;
        padding: 10px 40px;
        font-family: 'Ubuntu', sans-serif;
        margin: 0 auto;
        font-size: 13px;
        box-shadow: 0 0 20px 1px rgba(0, 0, 0, 0.04);
        display: block; /* Set to block for full-width button */
    }

    .forgot {
        text-shadow: 0px 0px 3px rgba(117, 117, 117, 0.12);
        color: #E1BEE7;
        text-align: center;
        padding-top: 20px;
    }

    a {
        text-shadow: 0px 0px 3px rgba(117, 117, 117, 0.12);
        color: black;
        text-decoration: none;
    }

    .logo {
        text-align: center;
        padding-top: 30px;
    }

    .outlined-textbox {
        border: 1px solid #ccc;
        padding: 5px;
        width: 100%;
        margin: 0 auto;
    }

    .reset {
        text-align: center;
        padding-top: 20px;
    }
</style>


<div class="main">
    <div class="logo">
        <img src="https://img.icons8.com/office/80/triangular-bandage.png" alt="Image not found">
    </div>
    <h2 class="Patient"> Patient Login</h2>

    @using (Html.BeginForm("PatientLogin", "Home", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="un">
            @Html.LabelFor(model => model.Email, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.Email, new { @class = "un form-control outlined-textbox" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
        <br /><br /><br />
        <div class="pass">
            @Html.LabelFor(model => model.Password, new { @class = "control-label" })
            <div style="position: relative;">
                @Html.PasswordFor(model => model.Password, new { @class = "pass form-control outlined-textbox", id = "Password" })
                <i id="showPasswordIcon" class="show-password" style="position: absolute; right: 10px; top: 50%; cursor: pointer; transform: translateY(-50%);">👁️‍🗨️</i>
            </div>
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <br />
        <br />
        <br />
        <div class="form-group">
            <button type="submit" class="submit" style="color: black; font-size: 18px;">Login</button>
        </div>
        <div class="forgot">
            @Html.ActionLink("Reset", "ResetPass", "Home", new { @class = "form-class" })   &nbsp; || &nbsp;  @Html.ActionLink("Register", "PatientSignUp", null, new { @class = "form-class" })
        </div>


    }
</div>


@Scripts.Render("~/bundles/ShowPass")